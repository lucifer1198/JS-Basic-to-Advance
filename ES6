//Arrow functions

/*

let multiply= (x,y) =>{
	console.log(x);
	console.log(y);
	return x*y;
}
console.log(multiply(4,8));

*/

/*

let multiply= (x,y) =>{
	console.log(x);
	console.log(y);
	return x*y;
}
console.log(multiply(4));

*/

/*

let multiply= (x,y=2) =>{
	console.log(x);
	console.log(y);
	return x*y;
}
console.log(multiply(4));

*/

/*

let multiply= (x=4,y=2) =>{
	console.log(x);
	console.log(y);
	return x*y;
}
console.log(multiply());

*/

/*

let multiply= (x,y) =>{
	console.log(x);
	console.log(y);
	return x+y;
}
console.log(multiply("hello"));
*/

