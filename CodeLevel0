//********************************//
var isTopper= false
var marksObtained= window.prompt('Enter the Marks obtained: ');

if(marksObtained == undefined || marksObtained == null || marksObtained == '')
	alert('Invalid Input')
else if(marksObtained < 0 || marksObtained > 100)
	alert('Enter the Marks between 0-100 only')
else
{
marksObtained= Number(marksObtained)
var totalMarks = 100
var percentage= (marksObtained / totalMarks) * 100
var isTopper = (percentage > 90) ? true : false
alert(isTopper)
}

